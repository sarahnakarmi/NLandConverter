<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@color/green">

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="119dp" >
        <TextView
        android:id="@+id/txtinHectare"
        android:layout_width="182dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txtHectare"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="28dp"
        android:layout_marginRight="34dp"
        android:text="In Hectare"
        android:textAlignment="center"
        android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/txtHectare"
        android:layout_width="182dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/edttxtHectare"
        android:layout_alignParentRight="true"
        android:text="Hectare"
        android:textAlignment="center"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edttxtHectare"
        android:layout_width="78dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout1"
        android:layout_toLeftOf="@+id/txtHectare"
        android:editable="false"
        android:ems="10" >

        <requestFocus />
    </EditText>
    
</RelativeLayout>